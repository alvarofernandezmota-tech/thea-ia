# ==============================================
# THEA IA 2.0 - VARIABLES DE ENTORNO
# ==============================================

# Entorno aplicación
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
SECRET_KEY=your_super_secret_key_change_in_production

# Base de datos PostgreSQL
DATABASE_URL=postgresql://theaia_user:theaia_password@localhost:5432/theaia_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=theaia_db
DATABASE_USER=theaia_user
DATABASE_PASSWORD=theaia_password

# Redis (opcional - caché)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Bot Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=webhook_secret_key

# Machine Learning
SPACY_MODEL=es_core_news_sm
ML_CONFIDENCE_THRESHOLD=0.8
INTENT_MODEL_PATH=models/intent_classifier.pkl
ENTITY_MODEL_PATH=models/entity_extractor.pkl

# Logging
LOG_FILE_PATH=logs/theaia.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Métricas y monitoreo
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
